extends base.pug

block content
  h4 Change Title of video
  form(method="POST")
    input(placeholder="Title", required, type="text", value=video.title, name="title")
    input(placeholder="Description", required, type="text", value=video.description, name="description")
    input(placeholder="Hashtags, seperated by comma.", required, type="text", value=video.hashtags.join(), name="hashtags")
    input(type="submit", value="Upload Video")